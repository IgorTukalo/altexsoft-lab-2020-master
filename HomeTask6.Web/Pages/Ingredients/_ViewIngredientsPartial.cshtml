@model HomeTask6.Web.Pages.Ingredients.IngredientsIndexModel
<table class="table-ingr-recipe">
    <caption>
    </caption>
    @foreach (var ingredient in Model.DisplayedIngredients)
    {
        <tr>
            <th><input class="input-th" value="@ingredient.Name" type="text" placeholder="Enter ingredient name" id="@ingredient.Id" required /></th>
            <td>
                <button>
                    <img src="~/images/edit.png" name="@ingredient.Id" id="editIngredient" title="Сonfirm changed name" />
                </button>
                <button>
                    <img src="~/images/remove.png" name="@ingredient.Id" id="deleteIngredient" title="Delete ingredient"/>
                </button>
            </td>
        </tr>
    }
</table>
<!-- paging control -->
<paging page-no="Model.PageNo"
        page-size="Model.PageSize"
        total-records="Model.TotalRecords"
        query-string-key-page-no="pageNo"
        query-string-key-page-size="pageSize"
        class-active-page="bg-warning text-dark"
        ajax="true"
        ajax-update="#viewIngredients"
        ajax-url="?handler=ViewIngredientsPartial"
        ajax-loading="#loading">
</paging>